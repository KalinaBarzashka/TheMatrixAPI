@model TheMatrixAPI.Models.Movie.AddMovieViewModel

<div class="container">
    <h1>Add Movie</h1>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-controller="Movies" asp-action="Add">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="The Matrix 1,2,3..." />
        </div>
        <div class="form-group">
            <label asp-for="MovieNumber"></label>
            <input asp-for="MovieNumber" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="MovieLength"></label>
            <input asp-for="MovieLength" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Director"></label>
            <input asp-for="Director" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Producer"></label>
            <input asp-for="Producer" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DistributedBy"></label>
            <input asp-for="DistributedBy" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" type="text" class="form-control" placeholder="01/05/2004" />
        </div>
        <div class="form-group">
            <label asp-for="Country"></label>
            <input asp-for="Country" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Language"></label>
            <input asp-for="Language" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Budget"></label>
            <input asp-for="Budget" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="BoxOffice"></label>
            <input asp-for="BoxOffice" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" type="text" class="form-control" />
        </div>
        <input type="submit" value="Add" class="btn btn-primary" />
    </form>
</div>