@model TheMatrixAPI.Models.Character.DeleteCharacterViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2>Are you sure you want to delete this?</h2>
    <hr />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" value="@Model.Name" class="form-control" disabled>
        </div>
        <div class="form-group">
            <label asp-for="Alignment"></label>
            <input asp-for="Alignment" type="text" value="@Model.Alignment" class="form-control" disabled>
        </div>
        <div class="form-group">
            <label asp-for="RaceName"></label>
            <input asp-for="RaceName" type="text" value="@Model.RaceName" class="form-control" disabled>
        </div>
        <hr />
        @if (Model.Quotes.Count() > 0)
        {
            <h4>Quotes</h4>
            @foreach (var quote in Model.Quotes)
            {
                <div class="form-group">
                    <label asp-for="Quotes">Quote</label>
                    <input asp-for="Quotes" type="text" value="@quote.QuoteLine" class="form-control" disabled>
                </div>
            }
            <hr />
        }

        <form method="post" asp-controller="characters" asp-action="delete" asp-route-id="@Model.Id">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="/characters">Back to List</a>
        </form>
    </div>

</div>