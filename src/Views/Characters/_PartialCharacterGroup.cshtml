@model IEnumerable<TheMatrixAPI.Models.DTO.Character.CharacterGroup>

<table class="table table-dark">
    <tbody>
        @foreach (var characters in Model)
        {
            <tr>
                <td>@characters.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@characters.Id" class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" asp-route-id="@characters.Id" class="btn btn-outline-info"><i class="bi bi-book"></i></a>
                    <a asp-action="Delete" asp-route-id="@characters.Id" class="btn btn-outline-danger"><i class="bi bi-x-circle"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>