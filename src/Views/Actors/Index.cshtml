@model IEnumerable<TheMatrixAPI.Models.DTO.ActorDTO>

@{ 
    ViewData["Title"] = "Actors";
}

<div class="container">
    <h1 class="mt-4">Actors</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Character</th>
                @foreach (var movie in (ViewData["Movies"] as IEnumerable<TheMatrixAPI.Models.DTO.ActorMovieDTO>))
                {
                    <th>@movie.Name</th>
                }
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model)
            {
                <tr>
                    <td>@actor.FirstName</td>
                    <td>@actor.LastName</td>
                    <td>@actor.Character?.Name</td>
                    @foreach (var movie in (ViewData["Movies"] as IEnumerable<TheMatrixAPI.Models.DTO.ActorMovieDTO>))
                    {
                        <td>
                            @if (actor.Movies.Any(x => x.Id == movie.Id))
                            {
                                <i class="bi bi-person-check-fill actor-bi-check"></i>
                            }
                            else
                            {
                                <i class="bi bi-person-x-fill actor-bi-x"></i>
                            }
                        </td>
                    }
                    <td id="actor-action">
                        <a asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@actor.Id" class="btn btn-primary"><i class="bi bi-x-circle"></i></a>
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                @foreach (var movie in (ViewData["Movies"] as IEnumerable<TheMatrixAPI.Models.DTO.ActorMovieDTO>))
                {
                    <td></td>
                }
                <td id="actor-action">
                    <a asp-action="Add" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i></a>
                </td>
            </tr>
        </tbody>
    </table>

</div>

<style>
    .actor-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 400px;
        width: 320px;
        padding: 20px;
        border-radius: 5px;
        background: #fffffb;
        position: relative;
        box-shadow: 5px 5px 10px rgb(0 0 0 / 50%);
        margin: 8px;
    }

    .actor-bi-check {
        color: green;
        font-size: 20px;
    }

    .actor-bi-x {
        color: red;
        font-size: 20px;
    }
</style>