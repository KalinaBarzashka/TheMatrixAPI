@model TheMatrixAPI.Models.Actor.AddActorViewModel

@{
    ViewData["Title"] = "Add Actor";
}

<div class="container">
    <h1 class="mt-4">Add Actor</h1>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-controller="Actors" asp-action="Add">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" type="text" class="form-control">
        </div>
        <input type="submit" value="Add" class="btn btn-primary" />
    </form>
</div>