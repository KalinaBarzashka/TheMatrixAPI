@model TheMatrixAPI.Models.Actor.DeleteActorViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this?</h2>
<hr />
<div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" type="text" value="@Model.FirstName" class="form-control" disabled>
    </div>
    <div class="form-group">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName" type="text" value="@Model.MiddleName" class="form-control" disabled>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" type="text" value="@Model.LastName" class="form-control" disabled>
    </div>

    <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Actors">Back to List</a>
    </form>
</div>
