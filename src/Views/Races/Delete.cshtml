@model TheMatrixAPI.Models.Race.DeleteRaceViewModel

@{
    ViewData["Title"] = "Delete Race";
}

<div class="container">
    <h2 class="mt-4">Are you sure you want to delete this?</h2>
    <hr />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" value="@Model.Name" class="form-control" disabled>
        </div>
        <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="/races">Back to List</a>
        </form>
    </div>
</div>
