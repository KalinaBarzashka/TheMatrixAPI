@model IEnumerable<TheMatrixAPI.Models.DbModels.Movie>

<div class="movie-container">
    @foreach (var movie in Model)
    {
        var url = movie.ImageUrl != null ? movie.ImageUrl.Split("/") : new string[1];
        var imageUrl = url[url.Length - 1];

        <div class="movie-item">
            <div class="movie-img-container">
                @if (imageUrl != null)
                {
                    <img class="movie-img" src="/images/@imageUrl" alt="Card image cap">
                }
            </div>
            
            <div class="movie-body">
                <h5 class="card-title">@movie.Name</h5>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    }
</div>

<style>
    .movie-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding-left: 5px;
        padding-right: 5px;
    }

    .movie-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 320px;
        border-radius: 5px;
        background: #fffffb;
        position: relative;
        box-shadow: 5px 5px 10px rgb(0 0 0 / 50%);
        margin: 8px;
    }

    .movie-img-container {
        overflow: hidden;
        height: 450px;
    }

    .movie-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .movie-body {
        padding: 20px;
    }
</style>